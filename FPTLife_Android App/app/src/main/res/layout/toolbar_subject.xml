<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:id="@+id/toolbar_default"
                                   android:layout_width="match_parent"
                                   android:layout_height="170dp"
                                   android:background="@color/colorPrimary"
                                   android:orientation="vertical"
                                   android:theme="@style/Base.ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_go_back_left_arrow"
            android:layout_height="20dp"/>

        <TextView
            android:id="@+id/subjectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/back"
            android:textColor="@color/white"
            android:layout_marginRight="100dp"
            android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
            android:textSize="@dimen/base_20"/>
        <TextView
            android:id="@+id/subjectTime"
            android:layout_below="@id/subjectName"
            android:text="2017 - 2018 | Fall"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/title"
            android:layout_below="@id/subjectTime"
            android:text="Schedule"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</android.support.v7.widget.Toolbar>