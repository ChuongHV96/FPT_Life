<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/base_4"
                                    android:layout_marginLeft="@dimen/base_4"
                                    android:layout_marginBottom="@dimen/base_8"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_marginTop="@dimen/base_8">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">
            <TextView
                android:id="@+id/startTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:text="07:00"/>
            <TextView
                android:id="@+id/endTime"
                android:text="08:30"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"
                android:layout_below="@id/startTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/subjectName"
                android:layout_toRightOf="@+id/startTime"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="3dp"
                android:text="SWD101: Software Achitecture"
                android:maxLines="3"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/subjectName"
                android:layout_toRightOf="@id/endTime"
                android:layout_marginLeft="30dp"
                android:text="201"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/subjectName"
                android:layout_toLeftOf="@id/teacherPicture"
                android:layout_marginRight="5dp"
                android:text="HungLD"
                android:textSize="14dp"/>

            <ImageView
                android:id="@+id/teacherPicture"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="15dp"
                android:layout_below="@id/subjectName"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_graduation_owl"/>

        </RelativeLayout>

</android.support.v7.widget.CardView>